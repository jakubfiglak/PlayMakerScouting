{
  "name": "playmaker-pro-scouting",
  "version": "1.0.0",
  "description": "PlaymakerPro Scouting App",
  "engines": {
    "node": "12.x",
    "npm": "6.x"
  },
  "main": "server.js",
  "scripts": {
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test-coverage": "jest --watchAll --verbose --runInBand --detectOpenHandles --coverage",
    "test": "jest --watchAll --verbose --runInBand --detectOpenHandles",
    "testOne": "jest --watch --detectOpenHandles",
    "import-data": "node seeder -import",
    "destroy-data": "node seeder -destroy",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "Jakub Figlak",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^7.4.2",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "migrate-mongo": "^8.1.4",
    "mongo-sanitize": "^1.1.0",
    "mongoose": "^5.9.13",
    "mongoose-paginate-v2": "^1.3.9",
    "morgan": "^1.10.0",
    "node-geocoder": "^3.27.0",
    "nodemailer": "^6.4.6",
    "slugify": "^1.4.0",
    "validator": "^13.0.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2"
  },
  "jest": {
    "setupFiles": [
      "config/config"
    ]
  }
}
